@model BlogWeb.Models.Usuario

@using (Html.BeginForm("Adiciona", "Usuario", FormMethod.Post))
{
    @Html.LabelFor(u => u.Nome, "Nome")
    @Html.TextAreaFor(u => u.Nome, new { @class = "form-control" })

    @Html.LabelFor(u => u.Login, "Login: ")
    @Html.TextAreaFor(u => u.Login, new { @class = "form-control" })

    @Html.LabelFor(u => u.Password, "Password: ")
    @Html.PasswordFor(u => u.Password, new { @class = "form-control" })

    @Html.LabelFor(u => u.Email, "Email: ")
    @Html.TextAreaFor(u => u.Email, new { @class = "form-control" })
    
    <input type="submit" value="Cadastrar" />
}