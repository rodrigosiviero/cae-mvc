<div class="col-sm-3 col-sm-offset-1 blog-sidebar">
    <div class="sidebar-module">
        <h4>Autores</h4>
        <ol class="list-unstyled">
            @foreach (BlogWeb.Models.Usuario autor in ViewBag.Autores)
            {
                <li>@Html.ActionLink(autor.Nome, "BuscaPorAutor", "Busca", new { nome = autor.Nome }, null)</li>
            }
        </ol>
        <div class="sidebar-module">
            <h4>Tags</h4>
            <ol class="list-unstyled">
                @foreach (BlogWeb.Models.Tag tag in ViewBag.Tags)
                {
                    <li>@Html.ActionLink(tag.Nome, "BuscaPorTag", "Busca", new { nome = tag.Nome }, null)</li>
                }
            </ol>
        </div>
    </div>
</div>